<Application x:Class="PatientRecordSystem.App"

             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PatientRecordSystem"
             xmlns:util="clr-namespace:PatientRecordSystem.Util"
             StartupUri="View/MainWindow.xaml">

    <Application.Resources>

        <util:BoolVisibilityConverter x:Key="BoolVisibilityConverter"/>
        <Style x:Key="NavBar" TargetType="Button">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Height" Value="48" />
        </Style>

        <Style x:Key="Schedule" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="CanUserResizeColumns" Value="False" />
            <Setter Property="CanUserResizeColumns" Value="False" />
            <Setter Property="HeadersVisibility" Value="None" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserDeleteRows" Value="False" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="RowHeight" Value="32" />

        </Style>
    </Application.Resources>
    
</Application>
