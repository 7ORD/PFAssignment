<Window x:Class="PatientRecordSystem.View.AppointmentCreationModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PatientRecordSystem.View"
        mc:Ignorable="d"
        Title="AppointmentCreationModal" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Name="Title" Text="Schedule a new appointment" TextAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="DemiBold"/>

        <StackPanel Grid.Row="1" Margin="8">
            <TextBlock Text="Appointment Date" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
            
                <DatePicker Grid.Column="0" Name="DatePicker" Padding="6" Margin="0 4 4 0"/>
                <Button Grid.Column="1" Margin="4 4 0 0"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="8">
            <TextBlock Text="Patient" />
            <Grid Margin="0 6 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>

                <TextBox Name="Patient" Text="No Patient Selected" IsEnabled="False" Grid.Column="0" Padding="6" Margin="0 0 4 0"/>
                <Button Grid.Column="1" Margin="4 0 0 0" Content="Select a Patient"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="8">
            <TextBlock Text="Doctor" />
            <Grid Margin="0 6 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>

                <TextBox Name="Doctor" Text="No Doctor Selected" IsEnabled="False" Grid.Column="0" Padding="6" Margin="0 0 4 0"/>
                <Button Grid.Column="1" Margin="4 0 0 0" Content="Select a Doctor"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
