<Window x:Class="PatientRecordSystem.View.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PatientRecordSystem.View"
        mc:Ignorable="d"
        Title="NotificationWindow" 
        Width="300"
        Height="160"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        >
    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Name="HeaderText" Text="Header" TextAlignment="Center" Margin="6" FontSize="18" FontWeight="SemiBold"/>

            <TextBlock Grid.Row="1" Name="ContentText" Text="Notification Message" TextAlignment="Center" Margin="10"/>
            
            <Button Click="Close_Click" Grid.Row="2" Margin="64 6" Content="Close"/>
        </Grid>
    </Border>
</Window>
